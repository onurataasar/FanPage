<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ButtonPost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".Profile">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/main_textViewProfile"
        android:layout_width="116dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="172dp"
        android:text="PROFILE"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextPost"
        android:layout_width="242dp"
        android:layout_height="80dp"
        android:ems="10"
        android:fadeScrollbars="false"
        android:gravity="start|top"
        android:hint="Tell everyone what you think!"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        android:translationX="300px"
        android:translationY="600px"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="99dp"
        android:layout_height="95dp"
        android:translationX="20px"
        android:translationY="600px"
        app:srcCompat="@drawable/basketballuser"
        tools:src="@drawable/basketballuser" />

    <Button
        android:id="@+id/buttonPost"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:text="POST"
        android:translationX="300px"
        android:translationY="800px" />

    <ListView
        android:id="@+id/ListViewPost"
        android:layout_width="356dp"
        android:layout_height="367dp"
        android:background="#00000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:dividerHeight="3sp"
        android:scrollbarSize="0dp"
        android:translationX="50px"
        android:translationY="950px">

    </ListView>

</FrameLayout>