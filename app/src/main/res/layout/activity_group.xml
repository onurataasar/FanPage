<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".GroupActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.FanPageProject.AppBarOverlay"/>

    <include
        layout="@layout/content_group"
        android:background="#FFFFFF"
        android:translationY="100px" />

    <ListView
        android:id="@+id/listViewGroupPost"
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:translationY="660px" />

    <EditText
        android:id="@+id/editTextGroupPost"
        android:layout_width="272dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="Make a Post in this Group"
        android:inputType="textPersonName"
        android:translationX="50px"
        android:translationY="500px" />

    <Button
        android:id="@+id/buttonGroupPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:translationX="800px"
        android:translationY="500px" />

    <TextView
        android:id="@+id/textViewGroupName"
        android:layout_width="216dp"
        android:layout_height="73dp"
        android:text="LA Lakers Fan Group"
        android:textSize="28sp"
        android:textStyle="bold"
        android:translationX="400px"
        android:translationY="120px" />

    <ImageView
        android:id="@+id/imageViewUserGroup"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:background="#00000000"
        android:translationX="30px"
        android:translationY="100px"
        app:srcCompat="@drawable/grlast"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:shadowColor="#303F9F"
        android:text="Subscribe"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:translationX="400px"
        android:translationY="330px" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>